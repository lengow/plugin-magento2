<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Toolbox</title>
        <link src="Lengow_Connector::js/toolbox.js"/>
        <css src="Lengow_Connector::css/lengow-components.css"/>
        <css src="Lengow_Connector::css/lengow-layout.css"/>
        <css src="Lengow_Connector::css/lengow-pages.css"/>
        <css src="Lengow_Connector::css/font-awesome.css"/>
    </head>
    <body>
        <referenceBlock name="menu">
            <action method="setActive">
                <argument name="itemId" xsi:type="string">Lengow_Connector::help</argument>
            </action>
        </referenceBlock>
        <attribute name="class" value="lengow_connector"/>
        <referenceBlock name="root">
            <action method="setHeaderTitle">
                <argument translate="true" name="title" xsi:type="string">Lengow Toolbox</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Lengow\Connector\Block\Adminhtml\Main" name="lengow_legal_main" template="Lengow_Connector::toolbox/main.phtml">
                <block class="Lengow\Connector\Block\Adminhtml\Header" name="lengow_header" as="lengow_header" template="Lengow_Connector::header.phtml"/>
                <block class="Lengow\Connector\Block\Adminhtml\Toolbox\Content" name="lengow_toolbox_content" as="lengow_toolbox_content" template="Lengow_Connector::toolbox/content.phtml"/>
                <uiComponent name="lengow_action_listing"/>
                <block class="Lengow\Connector\Block\Adminhtml\Footer" name="lengow_footer" as="lengow_footer" template="Lengow_Connector::footer.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>